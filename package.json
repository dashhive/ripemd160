{
  "name": "@dashincubator/ripemd160",
  "version": "2.3.0",
  "description": "Browser-friendly ripemd160 hasher",
  "keywords": [
    "string",
    "strings",
    "ripemd160",
    "ripe160",
    "dash",
    "bytes",
    "cryptography"
  ],
  "license": "MIT",
  "main": "./ripemd160.js",
  "files": [
    "index.js",
    "lib/",
    "ripemd160.js"
  ],
  "types": "./types/index.d.ts",
  "repository": {
    "url": "https://github.com/dashhive/ripemd160",
    "type": "git"
  },
  "scripts": {
    "lint": "npx -p typescript@4.x -- tsc -p ./jsconfig.json",
    "build:types": "tsc --build",
    "bump": "npm version -m \"chore(release): bump to v%s\"",
    "test": "npm run lint && npm run unit && npm run unit:browser",
    "unit": "mocha test/*.js",
    "unit:browser": "npx polendina@3 --runner=mocha --page --worker --serviceworker --cleanup test/index.js",
    "build": "npm run build:types",
    "fmt": "npx -p prettier@2.x -- prettier -w '**/*.{js,md}'"
  },
  "devDependencies": {
    "hash-test-vectors": "^1.3.2",
    "multiformats": "^9.9.0"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "breaking": true,
              "release": "major"
            },
            {
              "revert": true,
              "release": "patch"
            },
            {
              "type": "feat",
              "release": "minor"
            },
            {
              "type": "fix",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "test",
              "release": "patch"
            },
            {
              "scope": "no-release",
              "release": false
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "chore",
                "section": "Trivial Changes"
              },
              {
                "type": "docs",
                "section": "Trivial Changes"
              },
              {
                "type": "test",
                "section": "Tests"
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
